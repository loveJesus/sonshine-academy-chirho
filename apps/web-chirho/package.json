{
  "name": "@sonshine/web-chirho",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB_CHIRHO --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB_CHIRHO --remote",
    "db:studio": "drizzle-kit studio",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "drizzle-orm": "^0.40.1",
    "isomorphic-dompurify": "^2.29.0",
    "marked": "^16.4.0",
    "nanoid": "^5.1.5",
    "resend": "^6.6.0",
    "stripe": "^20.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251219.0",
    "@sveltejs/adapter-cloudflare": "^7.0.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.1",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "wrangler": "^4.18.0"
  }
}
